<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/lightYellow"
    android:orientation="vertical"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/review_author_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:text="Dean Hansen"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/review_image_view_star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="-3dp"
            android:src="@drawable/star_71"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/review_image_view_star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="-3dp"
            android:src="@drawable/star_71"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/review_image_view_star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="-3dp"
            android:src="@drawable/star_71"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/review_image_view_star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="-3dp"
            android:src="@drawable/star_71"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/review_image_view_star5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/star_71"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/review_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/review_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="9dp"
        android:text="2 недели назад"
        android:textSize="9sp" />
</LinearLayout>